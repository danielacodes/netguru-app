%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td
          = i + 1
        %td
          %img.img-rounded{src: "#{get_poster_url(movie.title)}", width: "80"}/
        %td
          %h4
            = link_to movie.title, movie_path(movie)
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.strftime("%Y") + ')'
          %p
            Rating: #{get_rating(movie.title)}
            %br/
            Plot: #{get_plot(movie.title)}